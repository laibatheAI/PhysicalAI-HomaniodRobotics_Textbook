{
  "context7": {
    "integration": {
      "enabled": true,
      "api_endpoint": "https://api.context7.example.com",  // Replace with actual endpoint
      "api_version": "v1",
      "timeout": 30000
    },
    "content_analysis": {
      "enabled": true,
      "features": [
        "quality_assessment",
        "citation_verification",
        "technical_accuracy",
        "pedagogical_effectiveness"
      ],
      "target_audience": "computer_science_graduate_students",
      "domain_expertise": [
        "robotics",
        "artificial_intelligence",
        "embodied_intelligence",
        "humanoid_robots",
        "ros2",
        "simulation"
      ]
    },
    "documentation_validation": {
      "citation_check": true,
      "cross_reference_validation": true,
      "technical_example_verification": true,
      "code_example_accuracy": true
    },
    "project_tracking": {
      "metrics": [
        "content_quality_score",
        "technical_accuracy_rating",
        "citation_completeness",
        "pedagogical_effectiveness"
      ],
      "reporting": {
        "frequency": "weekly",
        "format": "json",
        "destination": "project_management_system"
      }
    },
    "integration_points": {
      "github_issues": {
        "auto_labeling": true,
        "content_analysis": true,
        "priority_scoring": true
      },
      "pull_requests": {
        "code_review_assistance": true,
        "documentation_quality_check": true,
        "technical_accuracy_validation": true
      },
      "commits": {
        "content_impact_analysis": true,
        "quality_regression_detection": true
      }
    },
    "quality_standards": {
      "minimum_citations": 15,
      "peer_reviewed_ratio": 0.5,
      "technical_accuracy_threshold": 0.95,
      "pedagogical_effectiveness_score": 4.0
    },
    "output_formats": {
      "docusaurus": {
        "enabled": true,
        "frontmatter_validation": true,
        "link_verification": true
      },
      "pdf_export": {
        "enabled": true,
        "citation_formatting": true,
        "cross_reference_validation": true
      }
    }
  }
}